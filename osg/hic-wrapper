#!/bin/bash

# gather system data
uname -nr

# read arguments
inputfile=$1
desturl=$2

# load necessary modules
source /cvmfs/oasis.opensciencegrid.org/osg/modules/lmod/current/init/bash
module load python/3.5.2 all-pkgs gcc/6.2.0 boost/1.62.0-cxx11 hdf5/1.8.13-cxx11 || exit 1

# unpack package
pkgname='hic-osg'
tar xzf $pkgname.tar.gz

export VIRTUAL_ENV="$(pwd)/$pkgname"
# add models to path and activate python venv
export PATH="$VIRTUAL_ENV/bin:$PATH"
# allow osu-hydro to find its data files
export XDG_DATA_HOME="$VIRTUAL_ENV/share"

# go!
run-events \
  --nevents 10 \
  --tmpdir . \
  @$inputfile \
  results || exit 1

# transfer results
# try to be fault-tolerant
globus() {
  globus-url-copy \
    -verbose -create-dest -restart -stall-timeout 30 $@ \
    results $desturl
}

for i in {1..5}; do
  globus && break
  sleep 5 && false
done || \
  globus -no-data-channel-authentication -no-third-party-transfers
